 {
	"env": {
		"mocha": true
	},
    "plugins": [
        "mocha",
        "chai-expect"
    ],
	"rules": {
		"mocha/no-sibling-hooks": "off",
		"mocha/max-top-level-suites": "off"
	},
   "extends": [
        "plugin:mocha/recommended",
        "plugin:chai-expect/recommended"
    ],
	"globals": {
		"describe": "readonly",
		"context": "readonly",
		"before": "readonly",
		"beforeEach": "readonly",
		"after": "readonly",
		"afterEach": "readonly",
		"it": "readonly",
		"expect": "readonly"
	}
}
